<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GetInfo" >
    //android:id="@+id/">
    //android:id="@+id/">
    //android:id="@+id/">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|date"
            android:text="YYYY-MM-DD"
            android:ems="10"
            android:id="@+id/DOB"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Age"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Age" />

        <RadioGroup
            android:id="@+id/RadioSex"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="0">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/MaleRadio" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/FemaleRadio" />
        </RadioGroup>

        <EditText
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:id="@+id/TestSite"
            android:layout_row="3"
            android:layout_column="0"
            android:text="TestSite" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/StudyCondition"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Study Condition" />

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/ItemType"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Item Type" />

        <Button
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/SubmitBttn"
            android:layout_row="7"
            android:layout_column="0"
            android:onClick="setup_db"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </GridLayout>

</RelativeLayout>
